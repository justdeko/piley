<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Piley" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:statusBarColor">@color/transparent</item>
    </style>

    <style name="Theme.Piley.Light" parent="Theme.Piley">
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground">@color/md_theme_light_background</item>
    </style>

    <style name="Theme.Piley.Dark" parent="Theme.Piley">
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowBackground">@color/md_theme_dark_background</item>
    </style>
</resources>